<?xml version="1.0"?>
<ruleset name="WordPress Project">
    <description>WordPress PHP coding standards</description>

    <!-- Use WordPress coding standard -->
    <rule ref="WordPress"/>

    <!-- Include all PHP files recursively -->
    <file>./**/*.php</file>

    <!-- Exclude common third-party and tooling directories -->
    <exclude-pattern>vendor/**</exclude-pattern>
    <exclude-pattern>node_modules/**</exclude-pattern>
    <exclude-pattern>dist/**</exclude-pattern>
    <exclude-pattern>src/**</exclude-pattern>
    <exclude-pattern>.github/**</exclude-pattern>
    <exclude-pattern>.vscode/**</exclude-pattern>

    <!-- Exclude Generic line length sniff -->
    <exclude name="Generic.Files.LineLength"/>
</ruleset>
